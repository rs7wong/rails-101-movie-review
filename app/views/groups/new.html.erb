<div class="col-md-4 col-md-offset-4">
  <h2>add a movie</h2>

  <hr>
  <%= form_for @group do |f| %>

  <% if @group.errors.any? %>
      <li>Movie's name can't be blank.</li>
  <% end %>


  Movie
  <%= f.text_field :title %>
  <br>
  Overview
  <br>
  <%= f.text_area :description %>
  <br>

  <%= f.submit "Submit", :disable_with => 'Submiting'%>
  <% end %>

</div>
